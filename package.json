{
  "name": "web-component",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "cross-env VUE_CLI_CSS_SHADOW_MODE=true vue-cli-service build",
    "build_component": "vue-cli-service build --target wc --name puzzle-button src/components/PuzzleButton.vue ",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.2.10",
    "copy-webpack-plugin": "^5.0.2",
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-rc.5",
    "@vue/cli-plugin-eslint": "^3.0.0-rc.5",
    "@vue/cli-service": "^3.0.0-rc.5",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "vue-template-compiler": "^2.5.16"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
